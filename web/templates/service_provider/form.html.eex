<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :organization_name, class: "control-label" %>
    <%= text_input f, :organization_name, class: "form-control" %>
    <%= error_tag f, :organization_name %>
  </div>

  <div class="form-group">
    <%= label f, :contact_name, class: "control-label" %>
    <%= text_input f, :contact_name, class: "form-control" %>
    <%= error_tag f, :contact_name %>
  </div>

  <div class="form-group">
    <%= label f, :website, class: "control-label" %>
    <%= text_input f, :website, class: "form-control" %>
    <%= error_tag f, :website %>
  </div>

  <div class="form-group">
    <%= label f, :contact_phone, class: "control-label" %>
    <%= text_input f, :contact_phone, class: "form-control" %>
    <%= error_tag f, :contact_phone %>
  </div>

  <div class="form-group">
    <%= label f, :email, class: "control-label" %>
    <%= text_input f, :email, class: "form-control" %>
    <%= error_tag f, :email %>
  </div>

  <div class="form-group">
    <%= label f, :hotline_phone, class: "control-label" %>
    <%= text_input f, :hotline_phone, class: "form-control" %>
    <%= error_tag f, :hotline_phone %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
